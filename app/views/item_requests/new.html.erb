
<%= form_for(@item_request) do |f| %>
  <% @items.each do |item| %>
    <p>
      <%= item.title %>
    </p>
    <%= hidden_field_tag("item[]", item.id) %>
  <% end %>


  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
